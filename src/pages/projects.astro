
---
import BaseLayout from "@layouts/BaseLayout.astro";

// TODO: Use real projects fetched from GitHub.
const projects = Array.from({ "length": 20 }, (_, idx) => idx);
---

<BaseLayout page_title="Projects">
	<!-- TODO: make `#page-heading` text interchange -->
	<div class="page-heading">
		<h1>Practice makes perfect.</h1>
		<p>Here are the list of projects that I have accomplished during my entire career. Courtesy of GitHub API.</p>
	</div>

	<div class="search-bar">
	</div>

	<ul class="projects">
		{projects.map(item => (
			<li class="project">{item}</li>
		))}
	</ul>
</BaseLayout>

<style lang="scss">
.page-heading {
	@apply mb-[2rem];
}

.projects {
	@apply grid grid-rows-3 grid-cols-3 gap-[1rem];
	
	.project {
		@apply border border-neutral;
	}
}
</style>
