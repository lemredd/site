---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout page_title="Home">
	<section class="hero about-me">
		<h1 class="title">Welcome.</h1>
		<p class="description">I am Jarlem de Peralta, a front-end web developer and UX/UI designer. I use my skills to create impressive solutions that can be used on an everyday basis.</p>
		<div class="nicknames">
			<!-- TODO: add animations -->
			You may call me lem/red/lemredd/lemmy.
		</div>
		<a href="/about#me">Get to know more about me.</a>
	</section>

	<section class="projects">
		<h1 id="projects" class="title">Projects</h1>
		<ul class="projects-container">
			{[1,2,3,4,5,6].map(item => (
				<li class={`project-item project-${item}`}>project {item}</li>
			))}
		</ul>
		<!-- TODO: make `/projects` page -->
		<a href="/projects">See all the things I've built</a>
	</section>
</BaseLayout>

<style lang="scss">
/* Add class to a slotted element if you want to style it! */
section {
	@apply pb-[2rem]
}

.hero {
	background-image: linear-gradient(#0008, #0008), url("src/assets/hero_portrait.jpg");
	background-origin: border-box;
	background-position: center;
	background-size: cover;
	height: 100vh;
}

.title {
	@apply my-5 text-[3rem];
}
.description {
	max-width: 500px;
}
.nicknames {
	@apply my-[2rem];
}

#projects {
	@apply text-right;
}
.projects-container {
	@apply
		mb-[1rem]
		grid gap-[.5rem]
		sm:grid-cols-3 sm:grid-rows-3
	;

	.project-item {
		@apply
			border border-neutral rounded
			py-5rem
		;

		text-align: center;
	}

	.project-1, .project-4, .project-5 {
		@apply sm:col-span-2;
	}
}
</style>
