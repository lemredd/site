---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout page_title="Home">
	<section class="hero about-me">
		<div class="container">
			<h1 class="title">Hello, I'm</h1>
			<p class="description">
				My name Is Jarlem Red, but you can call me
				lem.
			</p>
			<a class="about-link" href="/about#me">Get to know more about me.</a>
		</div>
	</section>

	<div class="container">
		<section id="projects" class="projects">
			<h1 id="projects" class="title">Projects</h1>
			<ul class="projects-container">
				{[1,2,3,4,5,6].map(item => (
					<li class={`project-item project-${item}`}>project {item}</li>
				))}
			</ul>
			<a href="/projects">See all the things I've built</a>
		</section>
	</div>
</BaseLayout>

<style lang="scss">
/* Add class to a slotted element if you want to style it! */
section {
	@apply pb-[2rem]
}

.hero {
	background-image: linear-gradient(#0008, #0008), url("src/assets/hero_portrait.jpg");
	background-origin: border-box;
	background-position: center;
	background-size: cover;
	height: 100vh;

	.container {
		@apply flex flex-col items-center justify-center text-center h-[inherit];
	}

	.about-link {
		@apply mt-8;
	}
}

.container {
	@apply mx-auto px-[1.5rem] sm:px-0;
}

.title {
	@apply my-5 text-8 sm:text-12;
}
.description {
	max-width: 500px;
}
.nicknames {
	@apply my-[2rem];
}

#projects {
	@apply text-right;
}
.projects-container {
	@apply
		mb-[1rem]
		grid gap-[.5rem]
		sm:grid-cols-3 sm:grid-rows-3
	;

	.project-item {
		@apply
			border border-neutral rounded
			py-5rem
		;

		text-align: center;
	}

	.project-1, .project-4, .project-5 {
		@apply sm:col-span-2;
	}
}
</style>
