import About from "@components/About.astro";

const projects = [
	{
		"id": 1,
		"name": "Project",
		"description": "Project short description",
		"image": "sample.jpg"
	},
	{
		"id": 2,
		"name": "Project",
		"description": "Project short description",
		"image": "sample.jpg"
	},
	{
