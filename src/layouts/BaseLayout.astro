---
import Header from "@components/Header.astro";
import DarkModeToggler from "@components/DarkModeToggler.astro";

const { page_title } = Astro.props;
---
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{page_title}</title>
	</head>
	<body>
		<DarkModeToggler />
		<Header />

		<main class="content">
			<h1>{page_title}</h1>
			<slot />
		</main>
	</body>
</html>

<style lang="scss">
$header-height: 64px;

:global(header) {
	height: $header-height;
}

body > :global(*) {
	@apply color-dark bg-white;

	transition:
		color 300ms ease,
		background-color 300ms ease;
}

.content {
	margin-top: $header-height;
	height: calc(100vh - $header-height);
}


:global(#dark-mode-toggler:checked) {
	& ~ :global(*) {
		@apply bg-dark color-white;

		
		:global(label.menu-backdrop) {
			@apply bg-dark bg-opacity-90;
		}
	}
}
</style>
