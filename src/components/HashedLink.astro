---
interface Props {
	link: string
}

const { link } = Astro.props as Props;
---

<a class="hashed-link" href={`#${link}`}>
	<slot />
	<span id="hash-link-icon" class="icon material-icons">link</span>
</a>

<style lang="scss">
a {
	@apply inline-flex gap-x-[.5rem] items-center;

	text-decoration-line: none !important;

	&:hover {
		.icon {
			@apply visible;
		}
	}
}
.icon {
	@apply invisible;
}
</style>

